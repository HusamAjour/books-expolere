<section>

    <section class="books-cards">
        <div class="book-card">
            <img src='<%= obj.image_url %>' alt="<%= obj.title %>">
            <h1><%= obj.title %> </h1>
            <h2><%= obj.author %></h2>
            <p><%= obj.description %></p>
            <h2><%= obj.isbn %></h2>
            <div class="submit-btn update-delete-btns">
                <button class="btn" id="updateBtn">Update details</button>
                <button class="btn">Delete book</button>
            </div>
        </div>
    </section>
    <%- include('edit') %>
    <div class="submit-btn">
        <a href='/' class="btn">Go to Homepage</a>
    </div>
</section>