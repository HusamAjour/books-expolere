<%- include('../layout/head') %>
<%- include('../layout/header') %>
<main>
    <section>
        <div class="homepage-greetings">
            <h2>Welcome to Books Explorer App!</h2>
        </div>
        <% if(books.length === 0){ %>
        <div class="submit-btn">
            <a href="/search/new" class="btn">Get started</a>
        </div>
        <% } else if(books.length !== 0){ %>
            <h2>Number of Books (<%=  books.length %>)</h2>
        <section class="books-cards">
            <% books.forEach(b =>{   %>
            <div class="book-card">
                <img src='<%= b.image_url %>' alt="<%= b.title %>">
                <h1><%= b.title %> </h1>
                <h2><%= b.author %></h2>
                <a href="/books/<%= b.id %>" class="btn">View details</a>
            </div>
            <% }); %>
        </section>
        <% }  %>
    </section>
</main>

<%- include('../layout/footer') %>